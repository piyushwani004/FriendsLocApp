<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.Fragments.Request.RequestFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchBarRequest"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/searchbar_background"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:drawablePadding="25dp"
        android:elevation="2dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="15dp"
        android:shadowColor="#5A5757"
        android:theme="@style/Widget.AppCompat.Light.SearchView"
        myapp:queryHint="Search Name" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRequest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchBarRequest"
        android:layout_marginTop="10sp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecycleViewRequest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/contact_card" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>